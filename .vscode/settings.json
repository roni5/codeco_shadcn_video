{
  // Use the workspace TypeScript
  "typescript.tsdk": "node_modules/typescript/lib",

  // Biome as default formatter for code (not CSS)
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "quickfix.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },

  // Language-specific formatters
  "[javascript]": { "editor.defaultFormatter": "biomejs.biome" },
  "[javascriptreact]": { "editor.defaultFormatter": "biomejs.biome" },
  "[typescript]": { "editor.defaultFormatter": "biomejs.biome" },
  "[typescriptreact]": { "editor.defaultFormatter": "biomejs.biome" },

  // Use the built-in CSS formatter; silence Tailwind v4 at-rules warnings
  "[css]": { "editor.defaultFormatter": "vscode.css-language-features" },
  "css.lint.unknownAtRules": "ignore",
  "scss.lint.unknownAtRules": "ignore",
  "less.lint.unknownAtRules": "ignore",

  // Tailwind CSS IntelliSense — make sure it sees your files (v4-friendly)
  "tailwindCSS.validate": true,
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.files.include": [
    "app/**/*.{ts,tsx,mdx}",
    "src/**/*.{ts,tsx,mdx}",
    "components/**/*.{ts,tsx,mdx}",
    "styles/**/*.{css}"
  ],
  // v4 doesn’t require a config file; this prevents stale config resolution
  "tailwindCSS.experimental.configFile": null,

  // Calm VS Code Git when there are tons of untracked files
  "git.untrackedChanges": "hidden",

  // Hide heavy dirs in Explorer/search
  "files.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/dist": true,
    "**/build": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/dist": true,
    "**/build": true
  }
}