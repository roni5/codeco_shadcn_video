{
  "$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
  "files": {
    "ignore": [
      "app/backup-pages/**"
    ]
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noArrayIndexKey": "warn",
        "noExplicitAny": "warn"
      },
      "a11y": {
        "useButtonType": "warn"
      },
      "style": {
        "useSelfClosingElements": "fix",
        "noUselessElse": "fix"
      }
    }
  },
  "formatter": {
    "enabled": true
  }
}
