{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"files": {
		"ignore": ["app/backup-pages/**", ".next/**", "node_modules/**"]
	},
	"linter": {
		"rules": {
			"suspicious": {
				"noArrayIndexKey": "warn",
				"noExplicitAny": "warn"
			},
			"a11y": {
				"useButtonType": "warn",
				"noSvgWithoutTitle": "warn"
			},
			"security": {
				"noDangerouslySetInnerHtml": "warn"
			},
			"style": {
				"useSelfClosingElements": "warn",
				"noUselessElse": "warn"
			}
		}
	},
	"formatter": {
		"enabled": true
	}
}
